{
  "manifest_version": 3,
  "name": "Floating JSON Formatter",
  "version": "1.0",
  "description": "Show formatted JSON in a floating box when selecting JSON text",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
